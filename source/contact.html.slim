    .col-lg-8
      = form_tag 'https://getsimpleform.com/messages?form_api_token=8a1414a224e622757559d5f523ebf0e8', :method => 'post' do
        - field_set_tag do
          = hidden_field_tag 'redirect_to', value: 'https://www.jawaireland.ie/thank-you'
